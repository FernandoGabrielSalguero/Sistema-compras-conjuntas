// Ruta completa al archivo .env
$env_path = __DIR__ . '/.env';

if (file_exists($env_path)) {
    $dotenv = parse_ini_file($env_path);
} else {
    die("❌ Error: El archivo .env no se encuentra en la carpeta del proyecto.");
}

// Conexión a la base de datos
$host = $dotenv['DB_HOST'] ?? null;
$dbname = $dotenv['DB_NAME'] ?? null;
$username = $dotenv['DB_USER'] ?? null;
$password = $dotenv['DB_PASS'] ?? null;

if (!$host || !$dbname || !$username || !$password) {
    die("❌ Error: Las variables de conexión no están correctamente configuradas en el archivo .env.");
}

try {
    $conn = new PDO("mysql:host=$host;dbname=$dbname", $username, $password);
    $conn->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
} catch (PDOException $e) {
    die("Error de conexión a la base de datos: " . $e->getMessage());
}
